<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:paddingTop="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_height="160dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"/>

    <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:id="@+id/user_name_txv"
                android:text="Darshana Jaisingh"
                android:textColor="@color/white"/>

        <TextView
                android:text="darshana.n@zohocorp.com"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>