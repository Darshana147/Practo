<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_margin="15dp"
                android:id="@+id/cart_medicine_imv"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

        <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:text="Medicine Name"
                    android:id="@+id/cart_item_medicine_name_txv"
                    android:gravity="start"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="17sp"
                    android:layout_height="40dp"/>

            <TextView
                    android:text="Medicine Description"
                    android:id="@+id/cart_item_medicine_description_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Medicine Price"
                    android:id="@+id/cart_item_medicine_price_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/add_item_to_cart_imv"
                        android:src="@drawable/add"
                        android:layout_marginRight="15dp"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:text="1"
                        android:id="@+id/count_txv"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/remove_item_from_cart_imv"
                        android:src="@drawable/remove"
                        android:layout_marginLeft="15dp"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>