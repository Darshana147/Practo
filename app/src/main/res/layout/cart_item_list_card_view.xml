<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/cart_medicine_imv"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Medicine Name"
                    android:id="@+id/cart_item_medicine_name_txv"
                    android:gravity="start"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="17sp"
                    android:layout_height="30dp"/>

                <ImageView
                        android:id="@+id/remove_item_from_medicine_cart"
                        android:src="@drawable/ic_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:text="Medicine Description"
                    android:id="@+id/cart_item_medicine_description_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Medicine Price"
                    android:id="@+id/cart_item_medicine_price_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginTop="3dp"
                    android:id="@+id/cart_item_count_button"
                    android:layout_gravity="start"
                    android:layout_marginRight="2dp"
                    android:padding="3dp"
                    android:backgroundTint="#000000"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_round_edge"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:text="change qty"
                    android:textColor="#929090"
                    android:backgroundTintMode="add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

