<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.OrderPlacementSuccessFragment">

    <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="ORDER NUMBER #1"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:background="#ECE9E9"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/checked_64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Order Placed Successfully"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:gravity="end"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Your payment of"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/rupee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="20sp"
                        android:id="@+id/order_success_total_amount"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="was completed successfully"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="20dp"
                    android:text="DELIVERY DATE"
                    android:gravity="center"
                    android:background="#ECE9E9"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="Delivery By"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/delivery_date_order_placement_success"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="14-June-2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                    android:layout_marginTop="15dp"
                    android:text="DELIVERY ADDRESS"
                    android:gravity="center"
                    android:background="#ECE9E9"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Home"
                    android:textSize="15sp"
                    android:id="@+id/type_of_address"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:paddingLeft="10dp"
                    android:text="User Name"
                    android:id="@+id/user_name_order_success"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:paddingLeft="10dp"
                    android:text="Address, Locality, City, State, Country,Pincode"
                    android:id="@+id/user_delivery_address_order_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"/>

            <TextView
                    android:paddingLeft="10dp"
                    android:text="Mobile Number"
                    android:id="@+id/user_mobile_number_order_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>

    <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <Button
            android:id="@+id/view_my_orders_button"
            android:text="VIEW MY ORDERS"
            android:layout_gravity="end"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
    />


</LinearLayout>