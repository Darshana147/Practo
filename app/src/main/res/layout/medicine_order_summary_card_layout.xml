<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="6dp"
        android:layout_margin="3dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/order_medicine_imv"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Medicine Name"
                    android:id="@+id/order_item_medicine_name_txv"
                    android:gravity="start"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="17sp"
                    android:layout_height="0dp"/>


            <TextView
                    android:text="Medicine Description"
                    android:id="@+id/order_item_medicine_description_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_marginTop="5dp"
                        android:src="@drawable/rupee"
                        android:layout_width="12dp"
                        android:layout_height="10dp"/>


                <TextView
                        android:text="120"
                        android:id="@+id/order_item_medicine_price_txv"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                    android:id="@+id/order_item_medicine_qty"
                    android:text="Qty 5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#ECE9E9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="TOTAL"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_marginTop="5dp"
                            android:src="@drawable/rupee"
                            android:layout_width="12dp"
                            android:layout_height="10dp"/>

                    <TextView
                            android:text="134.43"
                            android:layout_gravity="end"
                            android:id="@+id/order_item_medicine_total_price"
                            android:gravity="start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>