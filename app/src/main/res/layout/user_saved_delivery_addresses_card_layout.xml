<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/user_delivery_address_radio_button"
                android:theme="@style/MyEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <TextView
                android:text="User Name"
                android:id="@+id/user_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Address, Locality
City, State, Country,
Pincode"
                android:id="@+id/user_delivery_address"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>

        <TextView
                android:text="Mobile Number"
                android:id="@+id/user_mobile_number"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/remove_address_imv"
                    android:gravity = "top"
                    android:src="@drawable/cancel"
                    android:layout_gravity="end"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

            <!--<View-->
                    <!--android:layout_width="1dp" -->
                    <!--android:layout_height="50dp"/>-->

            <Button
                    android:id="@+id/edit_address_btn"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="45dp"
                    android:textAllCaps="false"
                    android:clickable="true"
                    android:text="Edit"
                    android:textColor="@color/colorPrimary"
                    android:background="#E9E8E8"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>