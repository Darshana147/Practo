<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_margin="3dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/search_medicine_linear_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_margin="10dp"
                android:id="@+id/medicine_imv"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Medicine Name"
                    android:id="@+id/medicine_name_txv"
                    android:gravity="start"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>

               <ImageView
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:id="@+id/favorite_medicine"
                       android:src="@drawable/ic_favorite"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:text="Medicine Description"
                    android:id="@+id/medicine_description_txv"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_marginTop="5dp"
                        android:src="@drawable/rupee"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:text="Medicine Price"
                        android:id="@+id/medicine_price_txv"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:visibility="invisible"
                        android:id="@+id/added_to_cart_status_txv"
                        android:textSize="14dp"
                        android:text="Added to Cart"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:textColor="#C0C0BE"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:text="ADD TO CART"
                        android:layout_weight="1"
                        android:id="@+id/add_to_cart_txv"
                        android:textColor="@color/colorAccent"
                        android:gravity="end"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>